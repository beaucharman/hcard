.base
  background-color $color-preview-background
  +above()
    display flex
    flex 1
    align-items center
    justify-content center

.wrapper
  max-width 430px
  margin 0 auto
  padding 40px 10px
  +above()
    width 430px

.card
  border-bottom 2px solid $color-grey-40

.heading
  color $color-grey-30
  margin-top 0
  margin-bottom 10px
  font-size 16px
  font-weight 400
  font-family sans-serif
  text-align right
  text-transform uppercase

.header
  position relative
  padding 18px
  background-color $color-preview-header

.avatarFigure
  position absolute
  right 12px
  bottom -14px
  width 80px
  height 100px
  margin 0
  border 2px solid $color-avatar-border
  background-color $color-white

.avatarImage
  max-width 100%
  height auto

.list
  padding 0
  margin 0
  padding 20px
  list-style none
  background-color $color-white
  &:after
    content ""
    display table
    clear both

.item
  display block
  position relative
  width 100%
  margin 0

.itemPair
  float left
  width 50%
  .label
    top 16px // offset for float

.label
  position absolute
  top 4px
  color $color-preview-label
  font-size 10px
  text-transform uppercase

.detail
  @extend $truncate
  max-width 100%
  height 20px
  margin-top 12px
  padding-bottom 2px
  padding-left 75px
  border-bottom 1px solid #999
  font-size 16px
  font-family serif

.detailName
  @extend $truncate
  max-width 80%
  height 60px
  margin 0
  padding-top 28px
  color $color-white
  font-size 28px
  font-family serif
  font-weight 300
  line-height 1.2
