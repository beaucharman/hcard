.base
  +above()
    flex 1

.wrapper
  max-width 390px
  margin 40px auto

.heading
  margin 0 0 24px 0
  padding 0 10px
  font-size 30px
  color $color-edit-heading

.fieldset
  margin 14px 0
  padding 10px
  border 0

.legend
  display block
  width 100%
  margin 0 0 16px 0
  padding 0 0 3px 0
  font-size 10px
  color $color-grey-30
  border-bottom 1px solid $color-grey-10
  text-transform uppercase

.field
  width 50%
  float left
  padding 0 10px 12px 10px

.label
  display block
  margin-bottom 4px
  text-transform uppercase
  font-size 12px
  color $color-label

.input
  width 100%
  padding 6px 8px
  font-size 16px
  font-family serif
  border 1px solid $color-grey-20
  border-radius 3px

.action
  padding 10px

.button
  border 0
  padding 6px 26px
  border-bottom 2px solid $color-button-border
  border-radius 3px
  text-align center
  font-size 20px
  color $color-white
  background-color $color-button
  appearance none
  +below(400px)
    width 100%

.file
  position absolute
  visibility hidden
  left -9999px

.buttonSubmit
  margin-left 18px
  border-bottom 2px solid $color-submit-button-border
  background-color $color-submit-button
  +below(400px)
    margin-left 0
    margin-top 10px
